{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"target": "es6",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"baseUrl": "./",
		"typeRoots": ["../node_modules/@types"]
	},
	"exclude": ["node_modules", "**/*.spec.ts"],
	"include": ["src/**/*"]
}
