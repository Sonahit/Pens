{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "es2016"],
		"allowJs": true,
		"checkJs": false,
		"jsx": "react",
		"baseUrl": "./",
		"outDir": "./dist/",
		"noImplicitAny": true,
		"esModuleInterop": true,
		"paths": {
			"@src/*": ["src"],
			"@public/*": ["public/*"],
			"@components/*": ["src/components/*"],
			"@utils/*": ["src/utils/*"],
			"~images/*": ["src/assets/images/*"],
			"@sass/*": ["src/assets/sass/*"],
			"@assets/*": ["src/assets/*"]
		}
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
